<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <solid android:color="#DEDCF3"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>
    <item android:state_focused="true"
        android:drawable="@drawable/ic_runner_man_background" /> <!-- focused -->
    <item android:state_hovered="true"
        android:drawable="@drawable/ic_runner_man_background" /> <!-- hovered -->
    <item android:drawable="@drawable/ic_runner_man_background" /> <!-- default -->

</selector>