<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="5dp"

    android:background="@color/background_item_list"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/value_rep_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout

            android:id="@+id/linearLayout2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/value_rep_icon"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/label_rep_date_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/value_rep_date_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01/11/2020"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_rep_date_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/value_rep_date_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13:45:52"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/label_rep_from_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desde"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/value_rep_from_place"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:text="Miraflores"
                android:textSize="14sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/label_rep_to_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasta"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/value_rep_to_place"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:text="Cayma"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>