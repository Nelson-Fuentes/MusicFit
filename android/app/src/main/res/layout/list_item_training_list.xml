<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/value_rep_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_rep_date_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/value_rep_date_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01/11/2020"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_rep_from_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/value_rep_from_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miraflores"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_rep_date_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hora"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/value_rep_date_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13:45"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_rep_to_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hasta"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/value_rep_to_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cayma"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>